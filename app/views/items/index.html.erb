<h1>Items</h1>
<%= link_to "New Item", new_item_path, class: "btn btn-primary" %> |
<%= link_to "Trashed Items", trashed_items_path, class: "btn btn-secondary" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= button_to "Show", item_path(item), method: :get, class: "btn btn-info" %></td>
        <td><%= button_to "Edit", edit_item_path(item), method: :get, class: "btn btn-warning" %></td>
        <td><%= button_to "Soft Delete", soft_delete_item_path(item), method: :patch, class: "btn btn-secondary" %></td>
        <td><%= button_to "Hard Delete", item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
